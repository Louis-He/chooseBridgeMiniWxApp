/* pages/university/result/result.wxss */
@import '../../university/result/weui.wxss';
page{
  background: linear-gradient(#1C5388, #0F3881); 
}
 .searchbar-result{
    margin-top: 0;
    font-size: 30rpx;
}
.searchbar-result:before{
    display: none;
}
.weui-cell{
    padding: 12px 15px 12px 35px;
}
.cancel{
  color: #3F53AF;  
  font-size: 28rpx;
} 
.cards{
  width: 92%;
  height: 100%;
  padding: 30rpx;
  display: flex;
  flex-direction: column; 
  justify-content: center;
}
 .cards::after {
  border: none;
} 
.universityCard{
  margin-bottom: 20rpx;
  width: 100%;
  border-radius: 10rpx;
  display: flex;
  flex-direction: row;
   box-shadow: 2px 2px 2px 1px rgba(0,0,0,0.5); 
  line-height: 1.5em;
   background-color: rgba(255, 255, 255, 0.2); 
  color: white;
  font-weight: lighter;
  letter-spacing: 1px;
}
 .universityCard::after {
  border: none;
} 
.item {
  height: 100%;
}

.item1 {
  padding: 20rpx; 
  width: 9%;
  height: 30%;
}

.item2 {
  width: 85%;
}

.item3 {
  padding: 5rpx;
  width: 5%;
  display: flex;
  align-items: center;
}

.name{
  font-size: 40rpx;
  align-items: center;
  padding-top: 15rpx;
}

.subname{
  font-size: 28rpx;
  line-height: 30rpx;
  padding-bottom: 20rpx;
}

.create-new{
  display: flex;
  justify-content: center;
  flex-direction: column; 
  padding-left: 77px;  
}

.button{
  font-size: 15px;
  margin-top: 5rpx;
  height: 40%;
  padding-bottom: 50rpx;
  background-color: #359ACA;
  color: white;
}