<view class="weui-search-bar">
            <view class="weui-search-bar__form">
                <view class="weui-search-bar__box">
                    <icon class="weui-icon-search_in-box" type="search" size="14"></icon>
                    <input type="text" class="weui-search-bar__input" placeholder="请输入教授名" value="{{inputVal}}" focus="{{inputShowed}}" bindinput="inputTyping" />
                    <view class="weui-icon-clear" wx:if="{{inputVal.length > 0}}" bindtap="clearInput">
                        <icon type="clear" size="14"></icon>
                    </view>
                </view>
                <label class="weui-search-bar__label" hidden="{{inputShowed}}" bindtap="showInput">
                    <icon class="weui-icon-search" type="search" size="14"></icon>
                    <view class="weui-search-bar__text">搜索</view>
                </label>
            </view>
            <view class="cancel weui-search-bar__cancel-btn" hidden="{{!inputShowed}}" bindtap="hideInput">取消</view>
        </view>

        <view class="cards">
        <view class="universityCard">
          <view class="item item1">
            <image mode='widthFix' src='../../../images/namecard.png'                         style='width:100%;height:100%'></image>
          </view>
          <view class="item item2">
            <text class='name'>{{university}}</text>
            <text class='subname'>
              {{state}} {{country}}
            </text>
          </view>
          <view class="item item3">
            <image src='../../../images/arrow.png' style='width:50%;                         height:20%'></image>
          </view>
        </view>

        <view class="universityCard">
          <view class="item item1">
            <image src='../../../images/namecard.png' style='width:100%;                     height:100%' mode='widthFix'></image>
          </view>
          <view class="item item2">
            <text class='name'>{{uiuc}}</text>
            <view class='subname'>
              {{uiucState}} {{country}}
            </view>
            <!-- <view class='subname'>
              {{country}}
            </view> -->
          </view>
          <view class="item item3">
            <image src='../../../images/arrow.png' style='width:50%;                         height:20%'></image>
          </view>
        </view>

        <view class='universityCard'>
          <view class='create-new'>
            <text>没有您所在的高校？</text>
            <button class ='button' bindtap='createNew'>创建新高校！</button>
          </view>
        </view>
    </view>