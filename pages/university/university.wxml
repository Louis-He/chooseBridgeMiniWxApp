<!--pages/university/university.wxml-->
<view class = "top-image">
  <image mode = "widthFix" style = "width:100%" 
  src ='/images/default-user-bg.png'></image>
</view> 
<view class="searchbar">
    <button class = "name-base" bindtap='nameBase'>按名称</button>
    <button class = "area-title" bindtap='areaBase'>按地区</button>
  </view>
  <view class="input-view"> 
    <text class='text-view'>我想查找</text>
     <input class="input-text" placeholder-style='font-weight:lighter; color:white'
     placeholder = "{{blankVal}}" 
     bindinput='inputTyping' confirm-type='search'/>
</view> 
   <button class = "searchBtn" bindtap='toUniversity'>搜索</button> 