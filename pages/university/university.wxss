/* pages/university/university.wxss */
@import 'weui.wxss';
page{
    background: linear-gradient(#1C5388, #0F3881);
}
.top-image {
  width: 100%;
  height: 100%;
}
 .searchbar {
  display: flex;
  flex-direction: row;
}
.name-base {
  font-weight: lighter;
  width: 43%;
  color: white;
  background-color: rgba(53, 154, 202, 0.2); /* FF8C00*/
  margin-bottom: 15rpx;
  margin-left: 100rpx;
  border-top-right-radius: 0rpx;
  border-bottom-right-radius: 0rpx;
}
.name-base::after {
  border: none;
}
.area-title::after {
  border: none;
}
.area-title {
  font-weight: lighter;
  width: 43%;
  color: white;
  background-color: rgba(255, 255, 255, 0.2);
  margin-bottom: 15rpx;
  margin-right: 100rpx;
  border-top-left-radius: 0rpx;
  border-bottom-left-radius: 0rpx;
}
.input-view {
  display: flex;
  flex-direction: row;
  justify-content: center;
  background-color: transparent;
  font-size: 35rpx;
  width: 72%;
  align-self: center;
  margin-left: 97rpx; 
  padding: 15rpx 0rpx 15rpx 0rpx;
}
.searchBtn {
  font-weight: lighter;
  color: white;
  width: 75%;
  margin-top: 20rpx;
  background-color: rgba(255, 255, 255, 0.2);
}
.input-text {
  border-bottom: 1rpx solid white;
  text-align: center;
}
.text-view {
  color: white;
  font-weight: lighter;
}