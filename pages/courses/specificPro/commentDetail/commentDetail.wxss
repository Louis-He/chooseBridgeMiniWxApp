/* pages/courses/specificPro/commentDetail/commentDetail.wxss */
@import '../specificPro.wxss';
.cmt-overall-view {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  height: auto;
}
.text-part {
  line-height: 1.4em;
  margin-top: 20rpx;
}
.left-text-part {
  white-space: nowrap;
}
.cmt-user-logo {
  width: 140rpx;
}
.image-part {
  display: flex;
  flex-direction: row;
  justify-content: center;
}
.right-text-part {
  margin-right: 60rpx;
}
.course-left-part {
  text-align: center;
  margin-right: 40rpx;
  margin-left: 15rpx;
}
.course-left-up-view {
  line-height: 1.2em;
  margin-top: 15rpx;
  white-space: nowrap;
}
.cmt-detail-text-view {
  line-height: 1.4em;
  margin: 15rpx 25rpx 25rpx 25rpx;
}
.bottom-view {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  padding-bottom: 30rpx;
}
.share-view {
  width: 50rpx;
  padding-top: 15rpx;
  margin-bottom: 10rpx;
}
.btn-view {
  width: 120rpx;
  height: 120rpx;
  background-color: rgba(255, 255, 255, 0.2);
  border-radius: 500rpx;
  margin: 20rpx 10rpx 0rpx 10rpx;
  box-shadow: 2px 2px 2px 1px rgba(0,0,0,0.2);
}
.circle-view {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.lowest-tag {
  margin: 0rpx 20rpx 15rpx 0rpx;
}