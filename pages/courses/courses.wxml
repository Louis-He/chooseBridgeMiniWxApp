
<block wx:if="{{firstView}}">
<!--pages/courses/courses.wxml-->
<view class = "top-image">
  <image mode = "widthFix" style = "width:100%" 
  src ='/images/default-user-bg.png'></image>
</view> 
  <view class='border'>
  <view class = "input-bar">
    <text class = "guide">我想查找</text>
      <view class="input-up"> 
        <input class="input-view"  placeholder-style=
        'color:rgba(255,255,255,0.5);font-weight:lighter'
        placeholder = "{{blankUni}}" 
         adjust-position = 'true' bindinput='inputTyping' confirm-type='search'
         style='background-color:transparent'/>
      </view>
      <text class='guide-right'>的</text> 
    </view>
    <view class='input-bar'>
      <view class="input-down"> 
        <input class="input-view"  placeholder-style=
        'color:rgba(255,255,255,0.5);font-weight:lighter' 
        placeholder = "{{blankPro}}" 
        adjust-position = 'true' bindinput='inputTyping'confirm-type='search'/>
      </view>
      <text class='guide-right'>教授所授课程</text>
    </view>
    <view class='input-bar'>
      <button class='search-btn' bindtap='toProfessor'>搜索</button>
    </view>
  </view>
  <text class='tips'>小贴士：只输入高校名可查看该学校所有课程哦！</text>
</block>


<!--original search result sub-page-->
<block wx:if="{{!firstView}}">
<view class="page">
    <view class="page__bd">
        <view class="weui-search-bar">
            <view class="weui-search-bar__form">
                <view class="weui-search-bar__box">
                    <icon class="weui-icon-search_in-box" type="search" size="14"></icon>
                    <input type="text" class="weui-search-bar__input" placeholder="请输入教授名" value="{{inputVal}}" focus="{{inputShowed}}" bindinput="inputTyping" />
                    <view class="weui-icon-clear" wx:if="{{inputVal.length > 0}}" bindtap="clearInput">
                        <icon type="clear" size="14"></icon>
                    </view>
                </view>
                <label class="weui-search-bar__label" hidden="{{inputShowed}}" bindtap="showInput">
                    <icon class="weui-icon-search" type="search" size="14"></icon>
                    <view class="weui-search-bar__text">搜索</view>
                </label>
            </view>
            <view class="cancel weui-search-bar__cancel-btn" hidden="{{!inputShowed}}" bindtap="hideInput">取消</view>
        </view>
        <view class="weui-cells searchbar-result" wx:if="{{inputVal.length > 0}}">
            <navigator url="" class="weui-cell" hover-class="weui-cell_active">
                <view class="weui-cell__bd">
                    <view>实时返回1</view>
                </view>
            </navigator>
            <navigator url="" class="weui-cell" hover-class="weui-cell_active">
                <view class="weui-cell__bd">
                    <view>实时返回2</view>
                </view>
            </navigator>
            <navigator url="" class="weui-cell" hover-class="weui-cell_active">
                <view class="weui-cell__bd">
                    <view>实时返回3</view>
                </view>
            </navigator>
            <navigator url="" class="weui-cell" hover-class="weui-cell_active">
                <view class="weui-cell__bd">
                    <view>实时返回4</view>
                </view>
            </navigator>
        </view>
    </view>

    <view class="cards">
        <view class="universityCard">
          <view class="item item1">
            <image src='../../../images/user.png' style='width:100%;                     height:110%'></image>
          </view>
          <view class="item item2">
            <text class='name'>{{professor}}</text>
            <text class='subname'>
              {{school}} \n {{college}}
            </text>
          </view>
          <view class="item item3">
            <image src='../../../images/arrowNew.png' style='width:80%;                         height:20%'></image>
          </view>
        </view>

        <view class="universityCard">
          <view class="item item1">
            <image src='../../../images/user.png' style='width:100%;                     height:110%'></image>
          </view>
          <view class="item item2">
            <text class='name'>{{professor2}}</text>
            <text class='subname'>
              {{school}} \n {{college}}
            </text>
          </view>
          <view class="item item3">
            <image src='../../../images/arrowNew.png' style='width:80%;                         height:20%'></image>
          </view>
        </view>

          <view class='create-new'>
            <text>没有您想查询的教授？</text>
            <button class ='button' bindtap='createNew'>创建新教授！</button>
          </view>
    </view>
</view>
</block>