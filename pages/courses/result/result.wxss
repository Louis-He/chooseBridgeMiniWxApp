/* pages/courses/result/result.wxss */
@import '../../university/result/weui.wxss';
page{
  background-color: #3F53AF;  
}
.searchbar-result{
    margin-top: 0;
    font-size: 30rpx;
}
.searchbar-result:before{
    display: none;
}
.weui-cell{
    padding: 12px 15px 12px 35px;
}
.cancel{
  color: #3F53AF;  
  font-size: 28rpx;
}
.cards{
  width: 92%;
  height: 100%;
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.universityCard{
  margin-bottom: 20rpx;
  width: 100%;
  height: 170rpx;
  border-radius: 15rpx;
  background-color: white;
  display: flex;
  flex-direction: row;
  box-shadow: 2px 2px 2px 2px rgba(0,0,0,0.5);
}

.item {
  height: 100%;
}

.item1 {
  padding: 20rpx;
  width: 9%;
  height: 30%;
}

.item2 {
  width: 85%;
}

.item3 {
  padding: 5rpx;
  width: 5%;
  display: flex;
  align-items: center;
}

.name{
  font-family:Arial, Helvetica, sans-serif;
  font-size: 48rpx;
  font-weight: bold;
}

.subname{
  font-family:Arial, Helvetica, sans-serif;
  font-size: 28rpx;
  line-height: 30rpx;
}

.create-new{
  font-family:Arial, Helvetica, sans-serif;
  display: flex;
  justify-content: center;
  flex-direction: column; 
  padding-left: 77px;  
}

.button{
  align-items: center;
  font-size: 15px;
  margin-top: 2px;
  height: 40%;
  padding-bottom: 40px;
  background-color: #63B8FF;
}