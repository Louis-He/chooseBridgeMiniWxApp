/* pages/modal/modal.wxss */
.mask_layer {
  width: 100%;
  height: 100%;
  position: fixed;
  z-index: 1000;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
}
.modal_box {
  width: 80%;
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 0;
  z-index: 1001;
  background: #0F3881;
  margin: -150px 12% 0 12%;
  border-radius: 3px;
}
 
.title {
  color: grey;
  padding: 5px;
  text-align: center;
  background-color: gazure;
  letter-spacing: 10rpx;
}
 
.content {
  color: white;
  overflow-y: scroll; /*超出父盒子高度可滚动*/
  margin-left: 50rpx;
  margin-right: 50rpx;
}
 
.btn {
  width: 100%;
  margin-top: 65rpx;
  display: flex;
  flex-direction: btn;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  background-color: #1C5388;
  color: white;
}
 
.cancel {
  width: 100%;
  padding: 10px;
  text-align: center;
  background: #359ACA;
  color: white;
}
 
.Sure {
  width: 100%;
  padding: 10px;
  background-color: gainsboro;
  text-align: center;
}
 
.modalMsg {
  text-align: center;
  margin-top: 45rpx;
  display: block;
}