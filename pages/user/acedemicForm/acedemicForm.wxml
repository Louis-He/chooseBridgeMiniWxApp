<!--pages/user/AcedemicForm/acedemicForm.wxml-->
<view class="weui-cells__title">我的学术信息</view>
<view class="weui-cells weui-cells_after-title">
  <view class="weui-cell weui-cell_input">
    <view class="weui-cell__hd">
      <view class="weui-label">我的大学</view>
    </view>
    <view class="weui-cell__bd">
      <input class="weui-input" value="{{university}}" placeholder="请输入大学名"/>
    </view>
  </view>

  <view class="weui-cell weui-cell_input">
    <view class="weui-cell__hd">
      <view class="weui-label">我的专业</view>
    </view>
    <view class="weui-cell__bd">
      <input class="weui-input" value="{{discipline}}" placeholder="请输入专业"/>
    </view>
  </view>

  <view class="weui-cell weui-cell_input">
    <view class="weui-cell__hd">
      <view class="weui-label">高中所在地</view>
    </view>
    <view class="weui-cell__bd">
      <input class="weui-input" value="{{highSchoolCity}}" placeholder="请输入高中所在地"/>
    </view>
  </view>

  <view class="weui-cell weui-cell_input">
    <view class="weui-cell__hd">
      <view class="weui-label">日期</view>
    </view>
    <view class="weui-cell__bd">
      <picker mode="date" value="{{graduateYear}}" start="2000-01-01" end="2030-09-01" bindchange="bindDateChange">
        <view class="weui-input">{{graduateYear}}</view>
      </picker>
    </view>
  </view>
</view>

<view class="weui-btn-area">
  <button class="weui-btn" type="primary" bindtap="confirm">确定修改</button>
</view>