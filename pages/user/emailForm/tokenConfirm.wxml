<!--pages/user/emailForm/tokenConfirm.wxml-->
<view class="page">
  <view class="weui-cells__title">请输入发送到您新邮箱的验证码完成修改</view>
  <view class="weui-cells weui-cells_after-title">

    <view class="weui-cell weui-cell_input">
      <view class="weui-cell__hd">
        <view class="weui-label">验证码</view>
      </view>
      <view class="weui-cell__bd">
        <input class="weui-input" value="{{Token}}" bindinput="tokenInput" placeholder=""/>
      </view>
    </view>
  </view>

  <view class="weui-btn-area">
    <button class="weui-btn" bindtap="requestConfirm">完成修改</button>
  </view>
</view>